<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
    <link rel="stylesheet" href="/public/create.css">
</head>
<body>
    <main>
        <div class="main">
            <div class="main-container">
                <% current_post.forEach(element => { %>
                <div class="edit-id">
                    <p>Editing post <%= element.id %></p>
                </div>
                <div class="title">
                    <label for="title">Title</label>
                    <input type="text" name="title" value="<%= element.title %>" required>
                </div>
                <div class="content">
                    <label for="content">Content</label>
                    <textarea name="content" rows="6" maxlength="5000" value="<%= element.content %>" required></textarea>
                </div>
                <div class="edit">
                    <form action="/edit" method="GET" class="edit-form">
                        <button class="edit-btn">Create Post</button>
                    </form>
                </div>
                <% }) %>
            </div>
        </div>
    </main>
    <script src="main.js" type="script/javascript"></script>
</body>
</html>